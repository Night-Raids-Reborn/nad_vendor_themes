<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#555555">
    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="#FFFFFFFF" />
		    <corners android:bottomLeftRadius="?android:dialogCornerRadius" 
			        android:bottomRightRadius="?android:dialogCornerRadius" 
			        android:topLeftRadius="?android:dialogCornerRadius" 
			        android:topRightRadius="?android:dialogCornerRadius" />
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item android:left="5.0dip" android:top="5.0dip" android:right="5.0dip" android:bottom="5.0dip" >
	    <shape android:tint="?android:attr/textColorPrimary" android:shape="rectangle">
		    <solid android:color="#00ffffff" />
		    <stroke
                android:width ="2dp"
                android:color="?android:attr/colorAccent"/>
		    <corners android:bottomLeftRadius="?android:dialogCornerRadius" 
			        android:bottomRightRadius="?android:dialogCornerRadius" 
			        android:topLeftRadius="?android:dialogCornerRadius" 
			        android:topRightRadius="?android:dialogCornerRadius" />
	    </shape>
    </item>
</ripple>
